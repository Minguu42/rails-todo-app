<h5><%= @project.name %></h5>
<p><%= @project.description %></p>

<%= form_with(model: @task, local: true, class: 'mb-5') do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <%= f.text_field :name %>

  <%= f.hidden_field :project_id, value: @project.id %>

  <%= f.submit 'タスクを作成', class: 'btn btn-outline-info' %>
<% end %>

<% if @tasks.any? %>
  <% @tasks.each do |task| %>
    <p><%= task.name %></p>
  <% end %>
<% end %>
